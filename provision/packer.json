{
	"builders": [{
		"type": "docker",
		"image": "ubuntu:12.04",
		"export_path": "strato.tar",
		"run_command": [
			"{{.Image}}",
			"/bin/sh -c 'cd /opt/strato && npm start'"
		]
	}],
	"provisioners": [
	{
		"type": "shell",
		"inline": ["mkdir /opt/strato"]
	},
	{
		"type": "file",
		"source": "../",
		"destination": "/opt/strato"
	},
	{
		"type": "shell",
		"script": "provision.sh"
	},
	{
		"type": "shell",
		"script": "install.sh"
	}]
}
